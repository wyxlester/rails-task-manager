<h1>Create New Task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed, {}, "true", "false" %>
  <%= f.submit %>
<% end %>

<a href='/tasks'>Back to Homepage</a>
